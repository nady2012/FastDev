<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="title">
        <attr name="backGround" format="reference" />
        <attr name="leftLabel" format="reference" />
        <attr name="leftIcon" format="reference" />
        <attr name="titleLabel" format="reference" />
        <attr name="titleIcon" format="reference" />
        <attr name="leftTitleLabel" format="reference" />
        <attr name="leftTitleIcon" format="reference" />
        <attr name="leftTitleColor" format="color" />
        <attr name="rightLabel" format="reference" />
        <attr name="rightIcon" format="reference" />
    </declare-styleable>
    <declare-styleable name="switchWindow">
        <attr name="switchstate" format="boolean" />
        <attr name="onDrawable" format="reference" />
        <attr name="offDrawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="switchButton_item">
        <attr name="switchlabel" format="reference" />
        <attr name="switchBg" format="reference" />
        <attr name="switchCheck" format="boolean" />
    </declare-styleable>
    <declare-styleable name="RightSlideList">
        <attr name="scrollItem" format="reference" />
        <attr name="quickActionItem" format="reference" />
    </declare-styleable>
    <declare-styleable name="tips_bar">
        <attr name="show_progress" format="boolean" />
        <attr name="icon_left" format="reference" />
        <attr name="text_message_title" format="reference" />
        <attr name="text_message_detail" format="reference" />
    </declare-styleable>

    <!-- 侧边字母索引栏属性 -->
    <declare-styleable name="IndexLetters">
        <attr name="columnWidth" format="dimension" />
        <attr name="columnGap" format="dimension" />
        <attr name="columnLetterSize" format="dimension" />
        <attr name="columnLetterColor" format="color" />
        <attr name="showDefaultLetters" format="boolean" />
        <attr name="indexIcon" format="enum">
            <enum name="search" value="0" />
            <enum name="favourites" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="EntranceItem">
        <attr name="leftSignIcon" format="reference" />
        <attr name="nameText" format="reference" />
        <attr name="rightSignIcon" format="reference" />
    </declare-styleable>
    <declare-styleable name="InputBox">
        <attr name="leftMarkIcon" format="reference" />
        <attr name="rightClearIcon" format="reference" />
        <attr name="inputHint" format="reference" />
    </declare-styleable>
    <declare-styleable name="TimerView">

        <!-- 计时开始时间 -->
        <attr name="max_seconds" format="integer"></attr>
        <!-- 在计时运行的时候，显示在textview上的内容 -->
        <attr name="show_text" format="reference"></attr>
        <!-- 计时结束后，显示在textview的内容 -->
        <attr name="finished_text" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="CircleTextImageView">
        <attr format="dimension" name="citv_border_width"/>
        <attr format="color" name="citv_border_color"/>
        <attr format="boolean" name="citv_border_overlay"/>
        <attr format="color" name="citv_fill_color"/>
        <attr format="string" name="citv_text_text"/>
        <attr format="color" name="citv_text_color"/>
        <attr format="dimension" name="citv_text_size"/>
        <attr format="dimension" name="citv_text_padding"/>
    </declare-styleable>

</resources>