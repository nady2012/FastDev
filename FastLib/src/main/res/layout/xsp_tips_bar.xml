<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/hy_col_13" >


    <LinearLayout
        android:id="@+id/tips_left_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >


        <ProgressBar
            android:id="@+id/tips_ring_loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="23dp"
            android:indeterminateDrawable="@drawable/common_tips_ring_loading" />

        <ImageView
            android:id="@+id/tips_left_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="23dp"
            android:contentDescription="@null"
            android:src="@drawable/common_tips_error_icon"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_centerInParent="true">
        <!--android:layout_toRightOf="@id/tips_left_section"-->

        <TextView
            android:id="@+id/tips_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hy_col_1"
            android:textSize="@dimen/hy_font_size_14" />

        <TextView
            android:id="@+id/tips_message_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tips_message_title"
            android:layout_marginTop="6dp"
            android:textColor="@color/hy_col_1"
            android:textSize="@dimen/hy_font_size_14"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>